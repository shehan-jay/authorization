{
    "name": "auth/authentication",
    "description": "Authentication library for PHP",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Auth\\": "src/Auth/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Auth\\Tests\\": "tests/"
        }
    }
} 